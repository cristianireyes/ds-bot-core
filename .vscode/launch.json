  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug bot",
      "protocol": "inspector",
      "args": ["${workspaceRoot}/src/index.ts"],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "runtimeArgs": ["-r", "ts-node/register/transpile-only"],
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
